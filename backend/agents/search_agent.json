{
	"models": {
		"main_model": {
			"model_id": "${LLM_MODEL_NAME}",
			"api_key": "${LLM_API_KEY}",
			"api_base": "${LLM_MODEL_URL}",
			"temperature": 0.1
		},
		"sub_model": {
			"model_id": "${SUB_LLM_MODEL_NAME}",
			"api_key": "${SUB_LLM_API_KEY}",
			"api_base": "${SUB_LLM_MODEL_URL}",
			"temperature": 0.1
		}
	},
	"managed_agents": [],
	"main_agent": {
		"name": "search_agent",
		"model": "main_model",
		"max_steps": 5,
		"tools": [
				{
					"name": "KnowledgeBaseSearchTool",
					"source": "local",
					"params": {
						"index_names": "${SELECTED_KB_NAMES}",
						"base_url": "${ELASTICSEARCH_SERVICE}",
						"top_k": 5
					}
				},
				{
					"name": "EXASearchTool",
					"source": "local",
					"params": {
						"exa_api_key": "${EXA_API_KEY}",
						"max_results": 5,
						"image_filter": false,
						"image_filter_threshold": 0.5
					}
				},
				{
					"name": "SummaryTool",
					"source": "local",
					"model": "main_model",
					"params": {}
				}
			],
		"prompt_templates_path": "backend/prompts/search_agent.yaml"
	}
}